.tags-row {
    flex-direction: row;
    align-items: flex-start;
    flex-wrap: wrap;
}

.row {
    flex-direction: row;
    align-items: flex-start;
}

.col {
    flex-direction: column;
    align-items: flex-start;
}

.d-none {
    display: none;
}

#tags-label {
    min-width: 135px;
}

.content-tag {
    padding: 0;
    margin: 1px 5px 5px 0;
    flex-direction: row;
    border-width: 1px;
    width: 150px;
}

.tags-row .content-tag Toggle {
    border-bottom-width: 0;
}

.light .content-tag, .light .content-tag Toggle {
    background-color: rgb(211, 211, 211);
}

.dark .content-tag, .dark .content-tag Toggle {
    background-color: rgb(75, 75, 75);
}